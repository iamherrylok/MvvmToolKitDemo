<Window
    x:Class="MvvmToolKitDemo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:MvvmToolKitDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:MvvmToolKitDemo.UserControls"
    xmlns:ui="clr-namespace:MvvmToolKitDemo.UI;assembly=MvvmToolKitDemo.UI"
    xmlns:vm="clr-namespace:MvvmToolKitDemo.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MvvmToolKitDemo.UI;component/Styles/EditableTextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--<ControlTemplate x:Key="ValidationErrorTemplate">
                <StackPanel>
            -->
            <!--  Placeholder for the DataGridTextColumn itself  -->
            <!--
                    <AdornedElementPlaceholder x:Name="AdornedElement" />
                    <Popup IsOpen="True" PlacementTarget="{Binding ElementName=AdornedElement}">
                        <TextBlock
                            Background="White"
                            Foreground="Red"
                            Text="{Binding ErrorContent}" />
                    </Popup>
                </StackPanel>
            </ControlTemplate>-->
            <DataTemplate x:Key="ElementPopupTemplate">
                <Grid Width="300" Height="300">
                    <Button Content="确定">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding PopupCloseCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <StackPanel Background="Gray">
        <TextBlock Text="{Binding Title}" />
        <ui:EditableTextBox Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}">
            <ui:EditableTextBox.Text>
                <Binding Path="Text" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <local:NotEmptyValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </ui:EditableTextBox.Text>
        </ui:EditableTextBox>
        <Button Command="{Binding PopupCloseCommand}" Content="123456" />
        <uc:SplitButton DataContext="{Binding}" />
        <uc:SplitButton DataContext="{Binding}" />
    </StackPanel>
</Window>
